{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "types": ["@cloudflare/workers-types"],
    "strict": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@board-app/shared": ["../packages/shared/src/index.ts"],
      "@board-app/shared/*": ["../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
