{
  "name": "board-app",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @board-app/frontend dev",
    "worker:dev": "pnpm --filter @board-app/workers dev",
    "lint": "pnpm run --recursive lint",
    "typecheck": "pnpm run --recursive typecheck",
    "test": "pnpm run --recursive test --if-present",
    "test:ci": "pnpm --filter @board-app/workers test:ci && pnpm --filter @board-app/shared test -- --run && pnpm --filter @board-app/frontend test -- --run",
    "build": "pnpm --filter @board-app/frontend build",
    "lint:fix": "pnpm run --recursive lint --if-present -- --fix",
    "smoke:ws": "tsx scripts/ws-smoke-test.ts",
    "ci": "pnpm --filter @board-app/workers test -- --run && pnpm --filter @board-app/frontend test:e2e"
  },
  "devDependencies": {
    "@board-app/shared": "workspace:*",
    "tsx": "^4.7.1",
    "wrangler": "^4.44.0",
    "ws": "^8.18.0"
  }
}